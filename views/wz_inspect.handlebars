<script>
    function cancelWZ(){

        $.ajax({
            url: window.location.href + "/cancel",
            type: 'put',
            dataType: 'JSON'
        });
    }

    function confirmWZ(){

        $.ajax({
            url: window.location.href + "/confirm",
            type: 'put',
            dataType: 'JSON'
        });
    }

    function deleteWZ(){

        $.ajax({
            url: window.location.href,
            type: 'delete',
            dataType: 'JSON'
        });
    }
</script>


<style>
    tr{
        cursor: default
    }
</style>

{{#each data}}
    {{#if status}}Status dokumentu: {{status}}{{/if}}

<table style="width:100%">

    {{#each items}}
        <tr>
                <td>{{nazwa}}</td>
                <td>{{value}}</td>
        </tr>
        {{/each}}

</table>


    {{#ifvalue status value="created"}}
        <button onClick="confirmWZ()">Zatwierdź dokument</button>
        <button onClick="alert('TO DO: widok edycji dokumentu')">Edytuj dokument</button>
        <button onClick="deleteWZ()">Usuń dokument</button>
    {{/ifvalue}}

    {{#ifvalue status value="sent"}}
        <button onClick="cancelWZ()">Cofnij zatwierdzenie dokumentu</button>
    {{/ifvalue}}


{{/each}}